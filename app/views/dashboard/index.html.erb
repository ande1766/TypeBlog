<div class="container reader-section">
<div class="col-md-9 col-md-offset-1">
	<h2>Hello, <%= current_user.email %></h2>
	<br>
	<% @posts.reverse_each do |post| %>
	 
	   <h2><%= post.title %> </h2>
	   <br>
	    <%= image_tag post.photo.url(:med) %>
	    <br><br>
	   <p> <%= post.content %> </p>
	   <p> <%= link_to 'Read more', post.source %> </p>
	   <p> <%= post.author_id %> </p>

	   <hr>

	   <h4>Comments</h4>
	   <%= render :partial => post.comments %>
	   <%= form_for [@post, Comment.new] do |f| %>
	   <div id="white-link"><%= link_to "Add Comment", post, class: "btn btn-primary" %></div>
	   <% end %>

	  <hr>
	    <%= link_to 'Show', post %> |
	    <%= link_to 'Edit', edit_post_path(post) %> |
	    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %> |
	    <%= link_to 'New Post', new_post_path %>
	  <hr>
	  <br><br><br>
	<% end %>
</div>
</div>